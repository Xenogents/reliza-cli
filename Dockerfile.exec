FROM golang:alpine3.12@sha256:6042b9cfb4eb303f3bdcbfeaba79b45130d170939318de85ac5b9508cb6f0f7e as build-stage
WORKDIR /build
ENV CGO_ENABLED=0
COPY go.mod go.sum ./
COPY ./internal/imports ./internal/imports
RUN go build ./internal/imports
COPY . .
RUN apk add --update zip
ARG VERSION=not_versioned
RUN mkdir /$VERSION
RUN /bin/sh ./build.sh darwin amd64
RUN /bin/sh ./build.sh solaris amd64
RUN for GOARCH in 386 amd64 arm; do \
    /bin/sh ./build.sh freebsd $GOARCH; done;
RUN for GOARCH in 386 amd64 arm arm64; do \
    /bin/sh ./build.sh linux $GOARCH; done;
RUN for GOARCH in 386 amd64; do \
    /bin/sh ./build.sh openbsd $GOARCH; done;
RUN for GOARCH in 386 amd64; do \
    /bin/sh ./build.sh windows $GOARCH .exe; done;